{% extends 'base.html.twig' %}

{% block body %}
    {{ include('includes/entete-menu-defilant.html.twig') }}

    <!-- Menu and Content -->
    <div class="div-preview">
        <div class="d-flex" id="wrapper">
            <!-- Page menu -->
             {{ include('includes/menu-lateral.html.twig') }}
            
            <!-- Page Content -->
            <div id="page-content-wrapper">

{#                <div class="titre lien-titre"></div> #}
                  

                <div class="content container">  
{#                     <div style="width:500px">#}
                      <h1>
                          <span class="mt-4">
                            Edition Compte
                          </span>
                      </h1>
                      
                    
             
            <div style="text-align: right;" class="width-input-field">        
                    <span style="float: right">
                         <ul style="padding:0;margin:0;list-style-type:none;">
                                <li style="margin-left:2px;float:left;">
                                    <span id="loadingsearch" style="display: none">
                                        <img src="{{ asset('img/ajax-loader-search.gif') }}" />
                                        <img src="{{ asset('img/ajax-loader-search.gif') }}" />
                                        <img src="{{ asset('img/ajax-loader-search.gif') }}" />
                                     </span>    
                                </li>
                                {#<li style="margin-left:10px;float:left;">
                                 
                                    {{ form_start(delete_form) }}
                                     <input type="submit" value="Delete"  class="btn  btn-ems">
                                    {{ form_end(delete_form) }}
                           
                                </li>#}
                        </ul>
                    </span>
            </div>
            
{#                        <a href="{{ path('adminentreprise_delete',{ 'id': adminEntreprise.id }) }}"><input type="button" value="Supprimer" class="btn  btn-ems"/></a>#}
                    </span>
                    
                       {{ form_start(edit_form,{'attr' : {'class':'form_submitupdate'}}) }}

                      
                        <div class="form-group">
                            <b>Entreprise</b>
                            {{ form_widget(edit_form.entreprise.nom,{'attr':{'class':'form-control width-input-field ltc-nom'}}) }}
                            {{ form_errors(edit_form.entreprise.nom) }}
                            
                             {% if errorused is defined %}
                                {% if errorused == 4 %}
                                    <ul id="errorname">
                                        <li>
                                              Le nom de l'entrepreise est vide.
                                        </li>
                                    </ul>
                                 {% endif %}
                            {% endif %}
                        </div>
                        
                        <div class="form-group width-input-field" style="text-align: left">
                                    
                                     <b>Catégorie</b>
                                    <div class="radio">
                                        <ul style="list-style: none;">
                                            <li style="float:left;width: 50%">
                                                <input  name="categorie"  id="Banque" required="required" value="Banque" type="radio" {% if adminEntreprise.entreprise.categorie=='Banque' %} checked {% endif %}/>
                                                <label class="required" style="font-size: 1rem;color: #495057;" for="Banque">
                                                    Banque   
                                                </label>
                                            </li>
                                            <li  style="float:left">
                                                <input  name="categorie" id="Facturier" required="required" value="Entreprise" type="radio" {% if adminEntreprise.entreprise.categorie=='Entreprise' %} checked {% endif %}/>
                                                <label class="required" style="font-size: 1rem;color: #495057;" for="Entreprise">
                                                    Entreprise
                                                </label>
                                            </li>
                                        </ul>
                                        

                                       

                                        
                                     </div>
                                </div>
                                                <div style="clear:both"></div>
                        
                         <div class="form-group">
                            <b>Adresse</b>
                            <input type="adresse" name="adresse"   class="form-control width-input-field ltc-nom" value="{{adminEntreprise.entreprise.adresse}}" required autofocus/>
                            {% if errorused is defined %}
                                {% if errorused == 6 %}
                                    <ul id="errorname">
                                        <li>
                                              L'adresse de l'entreprise est vide!
                                        </li>
                                    </ul>
                                 {% endif %}
                            {% endif %}
                        </div>
                        
                          
                        <div class="form-group">
                            <b>E-mail</b>
                            <input type="email" name="email"   class="form-control width-input-field email-input" value="{{adminEntreprise.user.email}}" required autofocus/>
                            
                            
                            {% if errorused is defined %}
                                {% if errorused == 2 %}
                                    <ul id="errorinvalid">
                                        <li>
                                             L'adresse saisie est invalide.
                                        </li>
                                    </ul>
                                 {% endif %}
                            {% endif %}
                            
                            
                            {% if errorused is defined %}
                                {% if errorused == 3 %}
                                    <ul id="errorfound">
                                        <li>
                                             L'adresse saisie est introuvable.
                                        </li>
                                    </ul>
                                 {% endif %}
                            {% endif %}
                            
                            
                            
                            {% if errorused is defined %}
                                {% if errorused == 1 %}
                                    <ul id="errorused">
                                        <li>
                                             L'adresse saisie est déjà utilisée.
                                        </li>
                                    </ul>
                                 {% endif %}
                            {% endif %}
                           
                            
                        </div>
                        <div class="form-group">
                             <b>Téléphone</b>
                             <input type="text" name="telephone"   class="form-control width-input-field telephone" value="{{adminEntreprise.user.telephone}}" required autofocus/>
                             {% if errorused is defined %}
                                {% if errorused == 5 %}
                                    <ul id="errorphone">
                                        <li>
                                             Le numéro est de 5 caractères au moins.
                                        </li>
                                    </ul>
                                 {% endif %}
                            {% endif %}
                        
                        </div>
                       
                        
                        
                        
                                               
                       
                       <div style="height: 30px" class="width-input-field">
                            <span style="float: right">
                                 <a href="{{ path('adminentreprise_entreprise') }}"class="btn btn-ems">Annuler</a>
                                <input type="submit" value="Modifier" class="btn  btn-ems" />
{#                                <a href="{{ path('receveur_delete',{ 'id': receveur.id }) }}"><input type="button" value="Supprimer" class="btn  btn-ems"/></a>#}
                            </span>
                        </div>
                            
                            
                        {{ form_end(edit_form) }}
{#                    </div>#}
                    
                </div> 
            </div>
        </div>
     </div>





{% endblock %}
